<div class="page-header">
  <h1>
    User followings
    <a href="/user_followings/new" class="btn btn-lg btn-success">New User following</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Following</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @user_followings.each do |user_following| %>
      <tr>
        <td><%= user_following.following_id %></td>
        <td><%= user_following.user_id %></td>
        <td>
          <a href="/user_followings/<%= user_following.id %>" class="btn btn-primary">Show</a>
          <a href="/user_followings/<%= user_following.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_user_following/<%= user_following.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
