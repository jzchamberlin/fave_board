<!-- Validation failure messages -->
<% if @user_following.errors.any? %>
  <% @user_following.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add User Following</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_user_following" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for following_id -->
      <div class="form-group">
        <label for="following_id" class="control-label">
          Following
        </label>

        <input type="text" id="following_id" name="following_id" placeholder="Following" class="form-control" value="<%= @user_following.following_id %>">
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @user_following.user_id %>">
      </div>

      <button class="btn btn-success">
        Create User Following
      </button>
      or
      <a href="/user_followings">Cancel</a>
    </form>
  </div>
</div>
