<div class="page-header">
  <h1>
    List followings
    <a href="/list_followings/new" class="btn btn-lg btn-success">New List following</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Board</th>
        <th>List</th>
        <th>Actions</th>
      </tr>

      <% @list_followings.each do |list_following| %>
      <tr>
        <td><%= list_following.user_id %></td>
        <td><%= list_following.board_id %></td>
        <td><%= list_following.list_id %></td>
        <td>
          <a href="/list_followings/<%= list_following.id %>" class="btn btn-primary">Show</a>
          <a href="/list_followings/<%= list_following.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_list_following/<%= list_following.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
