<div class="page-header">
  <h1>
    Board followings
    <a href="/board_followings/new" class="btn btn-lg btn-success">New Board following</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Board</th>
        <th>Actions</th>
      </tr>

      <% @board_followings.each do |board_following| %>
      <tr>
        <td><%= board_following.user_id %></td>
        <td><%= board_following.board_id %></td>
        <td>
          <a href="/board_followings/<%= board_following.id %>" class="btn btn-primary">Show</a>
          <a href="/board_followings/<%= board_following.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_board_following/<%= board_following.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
