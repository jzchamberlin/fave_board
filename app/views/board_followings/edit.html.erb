<!-- Validation failure messages -->
<% if @board_following.errors.any? %>
  <% @board_following.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Board Following #<%= @board_following.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_board_following/<%= @board_following.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @board_following.user_id %>">
      </div>

      <!-- Label and input for board_id -->
      <div class="form-group">
        <label for="board_id" class="control-label">
          Board
        </label>

        <input type="text" id="board_id" name="board_id" placeholder="Board" class="form-control" value="<%= @board_following.board_id %>">
      </div>

      <button class="btn btn-warning">
        Update Board Following
      </button>
      or
      <a href="/board_followings/<%= @board_following.id %>">Cancel</a>
    </form>
  </div>
</div>
