<!-- Validation failure messages -->
<% if @user_request.errors.any? %>
  <% @user_request.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add User Request</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_user_request" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for send_id -->
      <div class="form-group">
        <label for="send_id" class="control-label">
          Send
        </label>

        <input type="text" id="send_id" name="send_id" placeholder="Send" class="form-control" value="<%= @user_request.send_id %>">
      </div>

      <!-- Label and input for receiver_id -->
      <div class="form-group">
        <label for="receiver_id" class="control-label">
          Receiver
        </label>

        <input type="text" id="receiver_id" name="receiver_id" placeholder="Receiver" class="form-control" value="<%= @user_request.receiver_id %>">
      </div>

      <button class="btn btn-success">
        Create User Request
      </button>
      or
      <a href="/user_requests">Cancel</a>
    </form>
  </div>
</div>
